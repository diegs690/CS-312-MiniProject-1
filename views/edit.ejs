<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-12 col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="h4 mb-3">Edit post</h2>
        <form action="/posts/<%= post.id %>?_method=PUT" method="POST" class="vstack gap-3">
          <div>
            <label class="form-label">Author</label>
            <input name="author" class="form-control" value="<%- post.author %>" required />
          </div>
          <div>
            <label class="form-label">Title</label>
            <input name="title" class="form-control" value="<%- post.title %>" required />
          </div>
          <div>
            <label class="form-label">Content</label>
            <textarea name="content" rows="8" class="form-control" required><%- post.content %></textarea>
          </div>

          <div class="d-flex gap-2">
            <button class="btn btn-primary">Save changes</button>
            <a class="btn btn-outline-secondary" href="/">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> EOF
